<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_share_dividend_tree" model="ir.ui.view">
        <field name="name">share.management.dividend.tree</field>
        <field name="model">share.management.dividend</field>
        <field name="arch" type="xml">
            <tree>
                <field name="shareholder_id"/>
                <field name="amount"/>
                <field name="date"/>
            </tree>
        </field>
    </record>

    <record id="view_share_dividend_form" model="ir.ui.view">
        <field name="name">share.management.dividend.form</field>
        <field name="model">share.management.dividend</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="shareholder_id"/>
                        <field name="amount"/>
                        <field name="date"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_share_dividends" model="ir.actions.act_window">
        <field name="name">Dividends</field>
        <field name="res_model">share.management.dividend</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>